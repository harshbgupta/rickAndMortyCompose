<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>

    <style name="AppModelStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top</item>
    </style>


    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Style for the M3 Bottom Sheet. -->
    <style name="BottomSheetDialog.Normal.Background" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="state_lifted">true</item>
        <item name="elevation">@dimen/elevation_card_view</item>
        <item name="marginLeftSystemWindowInsets">true</item>
        <item name="marginRightSystemWindowInsets">true</item>
        <item name="paddingBottomSystemWindowInsets">true</item>
        <item name="paddingTopSystemWindowInsets">true</item>
        <item name="paddingLeftSystemWindowInsets">false</item>
        <item name="paddingRightSystemWindowInsets">false</item>
        <item name="enforceMaterialTheme">true</item>
<!--        <item name="android:background">@drawable/background_bottom_sheet_dialog</item>-->
    </style>
</resources>